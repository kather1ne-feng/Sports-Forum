<div class="max-w-md mx-auto px-4 py-8 space-y-8">

  <% if flash[:alert] %>
    <div class="bg-red-100 text-red-800 border border-red-300 px-4 py-3 rounded">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="bg-green-100 text-green-800 border border-green-300 px-4 py-3 rounded">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <section>
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">ðŸ”‘ Sign In</h2>
    <%= form_with url: session_path, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :email_address, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email",
              placeholder: "Enter your email address",
              value: params[:email_address],
              class: "w-full mt-1 p-2 border border-gray-300 rounded" %>
      </div>

      <div>
        <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, required: true, autocomplete: "current-password",
              placeholder: "Enter your password",
              class: "w-full mt-1 p-2 border border-gray-300 rounded" %>
      </div>

      <%= form.submit "Log in", class: "w-full bg-[#bfceff] text-white py-2 px-4 rounded hover:bg-[#6b81c7] transition" %>
    <% end %>

    <div class="mt-2 text-right">
      <%= link_to "Forgot password?", new_password_path, class: "text-sm text-blue-600 hover:underline" %>
    </div>
  </section>


  <section>
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">ðŸ¤› Create Account</h2>
    <%= form_with model: @user, url: register_path, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :email_address, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email",
              placeholder: "Enter your email address",
              value: params[:email_address],
              class: "w-full mt-1 p-2 border border-gray-300 rounded" %>
      </div>

      <div>
        <%= form.label :username, "Username", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :username, required: true,
              placeholder: "Username",
              class: "w-full mt-1 p-2 border border-gray-300 rounded" %>
      </div>

      <div>
        <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password",
              placeholder: "Enter your password",
              class: "w-full mt-1 p-2 border border-gray-300 rounded" %>
      </div>

      <div>
        <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_confirmation, required: true,
              placeholder: "Confirm password",
              class: "w-full mt-1 p-2 border border-gray-300 rounded" %>
      </div>

      <%= form.submit "Sign up", class: "w-full bg-green-600 text-white py-2 px-4 rounded hover:bg-green-700 transition" %>
    <% end %>
  </section>

</div>
