  <h1 class="text-3xl font-bold text-gray-900">ğŸŸï¸ Events Home Page!</h1>

  <% if authenticated? %>
    <%= link_to "ğŸ¨ New Event", new_event_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-[#bfceff] hover:bg-[#6b81c7] rounded-xl shadow-sm transition" %>
  <% end %>
