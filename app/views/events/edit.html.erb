<div class="max-w-3xl mx-auto px-4 py-6">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">✏️ Edit Event</h1>

  <% if flash[:notice] %>
    <div class="bg-green-100 text-green-800 border border-green-300 px-4 py-3 rounded mb-4">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="bg-red-100 text-red-800 border border-red-300 px-4 py-3 rounded mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= render "form", event: @event %>

  <div class="mt-6">
    <%= link_to "← Cancel", @event, class: "text-blue-600 hover:underline text-sm" %>
  </div>
</div>
