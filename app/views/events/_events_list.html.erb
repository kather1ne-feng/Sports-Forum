  <div id="events" class="grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-6">
    <% @events.each do |event| %>
      <div class="bg-white shadow-md rounded-lg p-4 hover:shadow-lg transition">
        <h2 class="text-xl font-semibold text-blue-600 mb-1">
          <%= link_to event.name, event, class: "hover:underline" %>
        </h2>
        
        <p class="text-sm text-gray-700 mb-1">
          <strong>Sport:</strong> <%= event.sport_type %>
        </p>

        <p class="text-sm text-gray-500">
          <strong>Time:</strong>
          <%= event.event_time.strftime("%A, %B %e at %l:%M %p") %>
        </p>
      </div>
    <% end %>
  </div>